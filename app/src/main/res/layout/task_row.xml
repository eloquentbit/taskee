<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/cb_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:ignore="RtlHardcoded"
        />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cb_completed"
        android:layout_marginLeft="12dp"
        android:textSize="@dimen/material_component_lists_single_line_text_size"
        android:textColor="@color/colorPrimaryText"
        tools:text="Learn Android"
        tools:ignore="RtlHardcoded"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txt_title"
        android:layout_alignLeft="@id/txt_title"
        android:layout_marginTop="24dp"
        android:linksClickable="true"
        android:autoLink="all"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/material_typography_caption"
        tools:text="Task description"
        />

    <ImageButton
        android:id="@+id/btn_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_priority"
        android:layout_centerVertical="true"
        android:contentDescription="Set Due Date"
        android:src="@drawable/ic_action_calendar"
        android:background="?android:colorBackground"
        tools:ignore="RtlHardcoded"
        />

    <ImageView
        android:id="@+id/img_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="Task priority"
        tools:src="@drawable/ic_action_flag_high_priority"
        tools:ignore="RtlHardcoded"
        />

    <TextView
        android:id="@+id/txt_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_title"
        android:layout_toLeftOf="@id/btn_due_date"
        android:paddingRight="8dp"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/material_typography_caption"
        android:visibility="gone"
        tools:text="09 Sep"
        tools:visibility="visible"
        tools:ignore="RtlHardcoded"
        />

</RelativeLayout>
